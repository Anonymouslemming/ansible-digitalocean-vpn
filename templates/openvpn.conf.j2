# {{ ansible_managed }}

dev tun
port {{ vpn_port }}
proto {{ vpn_protocol }}
ifconfig {{ server_addr }} {{ client_addr }}
secret {{ keyfile }}

{% if compression is defined and compression %}
comp-lzo

{% endif %}
keepalive {{ keepalive }}
ping-timer-rem
persist-tun
persist-key

up /usr/local/sbin/do_masquerade
